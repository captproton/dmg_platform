<div class="flex flex-row">
  <div class="col-lg-4 offset-lg-4">
    <h1 class="text-center">Sign Up</h1>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="mb-3">
        <%= f.text_field :name, autofocus: false, class: "w-full px-4 py-2 rounded-lg border-gray-300 focus:border-blue-500  focus:ring-blue-500 text-gray-800", placeholder: "Full name" %>
      </div>

      <div class="mb-3">
        <%= f.email_field :email, autofocus: false, class: "w-full px-4 py-2 rounded-lg border-gray-300 focus:border-blue-500  focus:ring-blue-500 text-gray-800", placeholder: "Email Address" %>
      </div>

      <div class="mb-3">
        <%= f.password_field :password, autocomplete: "off", class: "w-full px-4 py-2 rounded-lg border-gray-300 focus:border-blue-500  focus:ring-blue-500 text-gray-800", placeholder: 'Password' %>
      </div>

      <div class="mb-3">
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "w-full px-4 py-2 rounded-lg border-gray-300 focus:border-blue-500  focus:ring-blue-500 text-gray-800", placeholder: 'Confirm Password' %>
      </div>

      <div class="mb-3 d-grid">
        <%= f.submit "Sign up", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-lg text-lg" %>

      </div>
    <% end %>

    <div class="text-center">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
