<!-- footer with header, newsletter sign-up form and links to term and privacy page -->
<footer class="bg-gray-800 text-white py-12">
  <div class="container mx-auto">
    <div class="flex flex-col items-center">
    <%#
        The newsletter is anticipated, but not required for MVP this week.
        <img src="newsletter-logo.png" alt="Newsletter Logo" class="w-20 h-20 mb-4">

        <div class="flex space-x-4">Sign up for our weekly newsletter</div>
  
        <form class="flex items-center mb-4">
          <input type="email" placeholder="Enter your email" class="bg-white text-black px-4 py-2 rounded-l-md focus:outline-none" />
          <button type="submit" class="bg-yellow-500 text-white px-4 py-2 rounded-r-md">Subscribe</button>
        </form>
      
    %>
      
      <div class="flex space-x-4">
        <% @platforms = Platform.all %>
        <% @platforms.each do |platform| %>

            <% if platform.link.present? %>
                <a href="<%= platform.link %>" class="text-gray-500 hover:text-white transition-colors duration-300">
                    <%= inline_svg_tag "#{platform.svg_icon}.svg", class: "w-8 h-8" %>
                </a>
            <% end %>
        <% end %>
        <!-- Add more social media icons as needed -->
      </div>

      <div class="flex space-x-4">
        <a href="/terms" class="text-gray-500 hover:text-white transition-colors duration-300">Terms</a>
        <a href="/privacy" class="text-gray-500 hover:text-white transition-colors duration-300">Privacy</a>
      </div>

      <div class="flex space-x-4">
        <span> &copy; 2023 Dice Media Group. All rights reserved.</span>
      </div>

    </div>
  </div>
</footer>
