  /* upcoming events */
  .event-list {
    display: flex;
    flex-direction: column;
    margin-top: 20px;
    margin-bottom: 20px;
    margin-left: 100px;
    margin-right: 20px;
  }

  .event {
    /* coloring and placement on page */
    background-color: white;
    color: black;
    padding: 10px;
    border-bottom: 1px solid #ccc;
    margin-bottom: 20px;      
  }
  .event {
    /* placement of children of element */
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    grid-template-rows: repeat(3, 1fr);
    grid-column-gap: 0px;
    grid-row-gap: 0px;
    justify-items: center;
  }


  
  .event-date {
    color: black;
    font-weight: bold;

  }


  .event-title {
    font-weight: bold;
    color: black;
  }

  /* placement within grid */

  .event-title {
    grid-column: 1 / span 4;
    grid-row: 2 / span 1;  
  }

  .event-location {
    grid-column: 1 / span 2;
    grid-row: 3 / span 1;  
    justify-self: start
  }

  .event-info-button {
    grid-column: 4 / span 1;
    grid-row: 1 / span 1;
  }


  @media screen and (min-width: 768px) {
    /* placement within grid */

    .event {
      display: grid;
      grid-template-columns: repeat(5, 1fr);
      grid-template-rows: 1fr;
      grid-column-gap: 0px;
      grid-row-gap: 0px;
    }

    .event-date {
      grid-column: 1 / span 1;
      grid-row: 1 / span 1;
    }
        
    .event-title {
      grid-column: 2 / span 2;
      grid-row: 1 / span 1;      
    }
  
    .event-location {
      grid-column: 4 / span 1;
      grid-row: 1 / span 1;      
      justify-self: start
    }
  
    .event-info-button {
      grid-column: 5 / span 1;
      grid-row: 1 / span 1;      
    }
  }
