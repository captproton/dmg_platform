<div class="rounded-lg overflow-hidden shadow-lg">
  <%= link_to blog_article, 'aria-label': blog_article.title do %>
    <% blog_article.cover_photo.present? ? image_url = url_for(blog_article.cover_photo)  : image_url = (asset_path 'image_not_found.jpg')  %>
    <%= image_tag image_url, 
        class: "w-full h-48 object-cover" %>
  <% end %>
  <div class="p-4">
    <div class="relative">
      <div class="absolute inset-0 z-10">
        <%= link_to blog_article, 'aria-label': blog_article.title,  class: "block w-full h-full" do %>
        <% end %>
      </div>
      <h2 class="text-xl font-semibold mb-2 ">
        <%= link_to blog_article, 'aria-label': blog_article.title, class: "black-text-link" do %>      
          <%= blog_article.title %>
        <% end %>
      </h2>
      <div class="excerpt">
        <p><%= blog_article.excerpt %></p>
      </div>

    </div>
  
  </div>
</div>
