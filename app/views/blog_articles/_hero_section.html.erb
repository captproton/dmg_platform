<!-- hero section with tags section, title, byline, published_at, and read time -->
<section class="hero">
<div class="nectar-recent-post-slide no-bg-img post-ref-0 tallest active" style="z-index: 20; opacity: 1;">

    <div class="row-bg using-image translate" data-parallax-speed="fast" style="transform: translate3d(0px, 0px, 0px); will-change: transform;">
        <div class="nectar-recent-post-bg" style="background-image: url(https://garyvaynerchuk.com/wp-content/uploads/2023/01/GaryVees-Top-5-DailyVees-of-2022-Twitter-No-Copy.png); "></div>
    </div>

        <div class="recent-post-container container">
            <div class="inner-wrap">
                <div class="grav-wrap">
                    <a href="https://garyvaynerchuk.com/author/mckenzie-dawkins/"> </a>
                    <div class="text">
                        <span>By <a href="/" rel="author">Dice Media Group</a></span>
                        <!-- <span> In</span> inner-wrap-->
                        <!-- <a class="general" href="https://garyvaynerchuk.com/topics/general/"><span class="general">General</span></a> -->
                    </div>
                </div>
                <h2 class="post-ref-1">
                    <a href="https://garyvaynerchuk.com/garyvees-top-5-dailyvees-of-2022-to-kickstart-2023/" class="full-slide-link">
                        <span>
                            <%= @blog_article.title %>
                        </span> 
                    </a>
                </h2>

            </div><!--/inner-wrap-->

        </div><!--/recent-post-container-->
        <% @blog_article.cover_photo.present? ? image_url = url_for(@blog_article.cover_photo)  : image_url = (asset_path 'image_not_found.jpg')  %>

        <%= image_tag image_url, class: "sp-no-webp attachment-large size-large skip-lazy wp-post-image sp-no-webp" %>

    </div>

</section>
